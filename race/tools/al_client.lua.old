function showPlayer(player)
	local vehicle = getPedOccupiedVehicle(player)
	if vehicle then
		if getElementAlpha(vehicle) ~= 255 or getElementAlpha(player) ~= 255 then
			setElementAlpha(vehicle, 255)
			setElementAlpha(player, 255)
		end
	end
end
